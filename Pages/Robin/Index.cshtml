@page
@model FrisbeeGolfCourseMap.Pages.Robin.IndexModel

@{
    ViewData["Title"] = "Index";
}


<body style="background-color: darkorange;">
</body>
<h1 style="color:white;">Index</h1>
<p>
    <a asp-page="Create">Create New</a>
</p>
<form style="color: white;">
    <p>
        <select asp-for="CourseTime" asp-items="Model.Times">
            <option value="">All</option>
        </select>
        Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />

        <a asp-page="./Index" asp-route-sortOrder="desc"
           style="float:right;background:goldenrod;color:black;padding:10px;border-radius:10px;text-decoration:none;margin-bottom:10px;">
            Sort by Time (descending)
        </a>
        <a asp-page="./Index" asp-route-sortOrder="asc"
           style="float: right; background: goldenrod; color: black; padding: 10px; border-radius: 10px; margin-right:10px;text-decoration:none;margin-bottom:10px;">
            Sort by Time (ascending)
        </a>
    </p>
</form>

<table class="table" style="background-color:white; border-radius: 26px 26px 26px 26px;">
    <thead>
        <tr style="background-color:lightsalmon">
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Difficulty)
            </th>
            <th>
               
                <a asp-page="./Index" asp-route-sortOrder="@Model.TimeSort">
                    @Html.DisplayNameFor(model => model.Course[0].TimeToComplete)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Course)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Location)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Difficulty)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TimeToComplete)
    </td>
    <td>
        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
    </td>
</tr>}
    </tbody>
</table>

